}
<style>
    .nav {
        border-bottom: 2px solid var(--clr-gray-100);
    }

    .nav-item {
        display: flex;
        align-items: center;
    }

    .nav-link {
        color: var(--clr-gray-100) !important;
        font-weight: bolder !important;
    }

        .nav-link:hover {
            color: var(--clr-white-100) !important;
        }

    #hamburger {
        color: var(--clr-white-100);
    }

    span.navbar-toggler {
        border: 2px solid var(--clr-white-100) !important;
    }

    .navbar-toggler:focus {
        box-shadow: none !important;
    }

    #navInputText {
        background-color: transparent !important;
        color: var(--clr-white-100);
        border: none;
    }

    .hero {
        padding-top: 6.25rem;
        width: 100%;
        height: 100vh;
        background-color: var(--clr-aqua-90);
        overflow: hidden;
        position: relative;
    }

        .hero #heroContainer {
            position: absolute;
            display: flex;
            justify-content: center;
            align-items: center;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            z-index: 5;
        }

        .hero img#img1 {
            position: absolute;
            top: -10%;
            right: 10%;
            height: 110vh;
            width: 35%;
            transform: rotate(-2deg);
            opacity: .8;
            z-index: 1;
        }

        .hero img#img2 {
            position: absolute;
            top: 5%;
            left: 5%;
            height: 110vh;
            width: 35%;
            transform: rotate(15deg);
            opacity: .8;
            z-index: 1;
        }

        .hero #ctaBtn {
            border: 2px solid var(--clr-aqua-100);
            color: var(--clr-aqua-100);
            box-shadow: 0 0 4px var(--clr-aqua-100);
        }

            .hero #ctaBtn:hover {
                background-color: var(--clr-aqua-100);
                color: var(--clr-white-100);
                box-shadow: none;
            }

    .service {
        padding-top: 5rem;
        width: 100%;
        min-height: 100vh;
        position: relative;
    }

    .service-title {
        color: var(--clr-aqua-100);
    }

    #serviceList {
        align-self: center;
        list-style: none;
        margin: 0 !important;
    }

    .box-content {
        position: absolute;
        top: 0;
        bottom: 0;
        right: 0;
        left: 0;
        z-index: 1;
    }

    #ctaService:hover {
        color: var(--clr-white-100);
    }

        #ctaService:hover > i {
            filter: drop-shadow(0 0 2px var(--clr-white-100));
        }

    .blog {
        padding-top: 6.25rem;
        width: 100%;
        min-height: 100vh;
    }
</style>
